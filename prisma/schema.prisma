model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]

  lists         GameList[]
}



model GameList {
  id    String     @id @default(cuid())
  name  String
  games ListGame[]
  users User[]
}

model Game {
  id          String     @id @default(cuid())
  igdbid      Int        @unique
  title       String
  releasedate Int
  publisher   String[]
  developer   String[]
  genres      String[]
  description String
  cover       String
  listgames   ListGame[]
}

model ListGame {
  game          Game      @relation(fields: [gameid], references: [id])
  gameid        String

  list          GameList  @relation(fields: [listid], references: [id])
  listid        String
  
  status        Status
  dateadded     DateTime  @default(now())
  datestarted   DateTime?
  datecompleted DateTime?

  @@id([gameid, listid])
}

enum Status {
  Completed
  InProgress
  NotStarted
}
